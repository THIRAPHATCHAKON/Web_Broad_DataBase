// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // mysql://user:pass@localhost:3306/mini_forum
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  passHash  String
  role      String   @default("user")
  createdAt DateTime @default(now())   // ← ต้องมีแบบนี้
  lastLogin DateTime?
  threads   Thread[]
  comments  Comment[]
}


model Thread {
  id        Int       @id @default(autoincrement())
  title     String
  body      String
  authorId  Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  author    User      @relation(fields: [authorId], references: [id])
  comments  Comment[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  body      String
  authorId  Int
  threadId  Int
  createdAt DateTime  @default(now())

  author    User      @relation(fields: [authorId], references: [id])
  thread    Thread    @relation(fields: [threadId], references: [id])
}
